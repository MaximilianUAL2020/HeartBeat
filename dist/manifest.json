{
  "name": "HeartBeat",
  "version": "0.0.1",
  "description": "Remember to take breaks while browsing the web.",
  "permissions": ["storage", "unlimitedStorage", "activeTab"],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48-on.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "js": ["js/content.js"],
      "css": ["css/style.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "web_accessible_resources": [
    "css/prompt.css",
    "prompt.html",
    "icons/heart_0.png",
    "icons/heart_1.png",
    "icons/heart_2.png",
    "icons/heart_3.png",
    "icons/heart_4.png",
    "icons/heart_5.png"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/48-off.png"
  },
  "manifest_version": 2
}
